<% url_ids = @histories.map{}%>
<% if @populars.exists? %>
<table class="table table-bordered table-hover table-striped">
  <thread>
  <tr>
    <td colspan="<%= current_user ? 3 : 2 %>">
      <div align="center">人気のHP</div>
    </td>
  </tr>
  </thread>
  <tbody>
  <% @populars.each do |popu| %>
  <tr>
    <td class="span2" >
      <%= popu[:count] %>ユーザ
    </td>
    <td class="span<%= current_user ? 7 : 5 %>">
      <a href="<%= url_for :action => :redirect , :url => popu[:url] , :url_id => popu[:url_id] %>" target="_blank">
      <% if popu[:title] && popu[:title].size > 0 %>
        <%= popu[:title] %>
      <% else %>
        <%= popu[:url] %>
      <% end %>
      </a>
    </td>
    <% if current_user %>
    <td class="span2 btn <%="btn-info" unless @url_ids.include?(popu[:url_id])%>">
      <div align="center">
	<div id="url_<%= popu[:url_id] %>">
	  <% if @url_ids.include?(popu[:url_id]) %>
	    登録済み
	  <% else %>
	    <%= link_to "登録",{ :action => :add_url, :urls => popu[:url], :id => popu[:url_id]} , {:method => :post }  %>
	  <% end %>
	</div>
      </div>
    </td>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>

